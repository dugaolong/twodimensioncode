<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_share_empty" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/share_popup_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/common_margin_middle"
            android:text="分享到..."
            android:textColor="@color/lightblue"
            android:textSize="@dimen/txt_size_18" />

        <LinearLayout
            android:id="@+id/alert_dialog_pop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin_bigger"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/share_weixin"
                    android:layout_width="@dimen/share_width"
                    android:layout_height="@dimen/share_width"
                    android:src="@drawable/share_weixin_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_small"
                    android:text="微信"
                    android:textColor="@color/share_background_51"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/share_friends"
                    android:layout_width="@dimen/share_width"
                    android:layout_height="@dimen/share_width"
                    android:src="@drawable/share_friends_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_small"
                    android:text="朋友圈"
                    android:textColor="@color/share_background_51"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>