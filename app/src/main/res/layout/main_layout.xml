<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/popu_view"
        android:layout_width="0dip"
        android:layout_height="0dip" />

    <RelativeLayout
        android:id="@+id/bottomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" >

        <include layout="@layout/public_line_1" />

        <RadioGroup
            android:id="@+id/rg_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp" >

            <RadioButton
                android:id="@+id/scan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/msg_button"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:singleLine="true"
                android:text="扫描"
                android:textColor="@color/tab_text_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/star_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/contacts_button"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:singleLine="true"
                android:text="收藏"
                android:textColor="@color/tab_text_selector"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/history_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_school_ring_button"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:singleLine="true"
                android:text="历史"
                android:textColor="@color/tab_text_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/setting_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/found_button"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:singleLine="true"
                android:text="设置"
                android:textColor="@color/tab_text_selector"
                android:textSize="12sp"
                android:visibility="visible" />
        </RadioGroup>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomList"
        android:orientation="vertical" >
    </FrameLayout>

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_margin="8dip"
        android:src="@drawable/person_face_ico" />

</RelativeLayout>